<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <TextView
        android:id="@+id/food_bottom_text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:text="选择2个或3个食材"/>

    <TextView
        android:id="@+id/food_bottom_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:visibility="visible"
        android:gravity="center"
        android:text="掌厨告诉你可以做哪些菜"/>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginTop="10dp"
        android:padding="10dp">

        <Button
            android:id="@+id/food_bottom_bt1"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@color/colorOrange"
            android:textColor="@color/colorWright"
            android:visibility="gone"
            android:text="某某某"/>

        <Button
            android:id="@+id/food_bottom_bt2"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@color/colorOrange"
            android:textColor="@color/colorWright"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:text="某某某"/>

        <Button
            android:id="@+id/food_bottom_bt3"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:background="@color/colorOrange"
            android:textColor="@color/colorWright"
            android:visibility="gone"
            android:layout_marginLeft="10dp"
            android:text="某某某"/>

        <Button
            android:id="@+id/food_bottom_add"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginLeft="10dp"
            android:visibility="gone"
            android:background="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/food_text_num"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorOrange"
            android:textSize="18sp"
            android:layout_marginLeft="10dp"
            android:visibility="visible"
            android:text="可做n道菜"/>

    </LinearLayout>

</LinearLayout>