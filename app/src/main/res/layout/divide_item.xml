<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        >

    <Button
        android:id="@+id/divide_xs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:drawableTop="@mipmap/xinshou"
        android:background="@color/colorAlpha"
        android:text="新手入门"/>

    <Button
        android:id="@+id/divide_sc"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:scaleX="0.7"
        android:scaleY="0.7"
        android:drawableTop="@mipmap/shicai"
        android:background="@color/colorAlpha"
        android:text="食材搭配"/>

    <Button
        android:id="@+id/divide_cj"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
        android:scaleX="0.7"
        android:scaleY="0.7"
    android:drawableTop="@mipmap/changjing"
    android:background="@color/colorAlpha"
    android:text="场景菜谱"/>

    <Button
        android:id="@+id/divide_ms"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_weight="1"
    android:drawableTop="@mipmap/meishi"
        android:scaleX="0.7"
        android:scaleY="0.7"
    android:background="@color/colorAlpha"
    android:text="美食直播"/>

    </LinearLayout>



</android.support.v7.widget.CardView>