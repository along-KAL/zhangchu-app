<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="山药玫瑰CP"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:drawableRight="@mipmap/icon_gray_arrow_down"
        android:id="@+id/happylife_detail_second_title"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="山药山药玫瑰CP山药玫瑰CP山药玫瑰CP山药玫瑰CP山药玫瑰CP玫瑰CP"
        android:layout_alignParentLeft="true"
        android:layout_margin="10dp"
        android:visibility="gone"
        android:id="@+id/happylife_detail_second_detail_content"
        android:layout_below="@+id/happylife_detail_second_title"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="选集"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_below="@+id/happylife_detail_second_detail_content"
        android:id="@+id/happylife_detail_select_text"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="更新至2集"
        android:layout_alignParentRight="true"
        android:drawableRight="@mipmap/icon_gray_arrow_down"
        android:gravity="center"
        android:layout_margin="10dp"
        android:layout_below="@+id/happylife_detail_second_detail_content"
        android:id="@+id/happylife_detail_updata_text"
        />

    <com.example.group.zhangchu.widget.CustomRadioGroup
        android:layout_below="@+id/happylife_detail_updata_text"
        android:id="@+id/happylife_detail_second_select_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="10dp"
        >
    </com.example.group.zhangchu.widget.CustomRadioGroup>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12为朋友觉得很赞"
        android:layout_alignParentLeft="true"
        android:gravity="center"
        android:layout_margin="10dp"
        android:drawableRight="@mipmap/icon_foot_praise_default"
        android:layout_below="@+id/happylife_detail_second_select_container"
        android:id="@+id/happylife_detail_zan_text"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_below="@+id/happylife_detail_zan_text"
        android:id="@+id/happylife_detail_second_zan_container"
        ></LinearLayout>
</RelativeLayout>