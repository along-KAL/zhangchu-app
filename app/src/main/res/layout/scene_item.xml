<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardUseCompatPadding="true"
    android:layout_margin="40dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="10dp">



    <LinearLayout
        android:id="@+id/scene_sublayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scene_subtitle2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="推荐达人"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:src="@mipmap/more"/>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/font_unchecked"/>

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="0dp"
       android:layout_weight="1.5"
       android:gravity="center_vertical">

       <ImageView
           android:id="@+id/scene_img1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/ic_launcher"
           android:layout_marginLeft="20dp"/>

       <TextView
           android:id="@+id/scene_title1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_toRightOf="@id/scene_img1"
           android:layout_marginLeft="10dp"
           android:layout_alignTop="@id/scene_img1"
           android:textSize="15sp"
           android:text="标题"/>

       <TextView
           android:id="@+id/scene_message1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/scene_title1"
           android:layout_alignLeft="@id/scene_title1"
           android:maxLines="2"
           android:ellipsize="end"
           android:textColor="@color/font_unlow"
           android:text="内容"/>

       <TextView
           android:id="@+id/scene_fans1"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/scene_message1"
           android:layout_alignLeft="@id/scene_message1"
           android:maxLines="2"
           android:ellipsize="end"
           android:textColor="@color/font_unchecked"
           android:text="粉丝"/>

   </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/font_unchecked"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/scene_img2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/scene_title2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/scene_img2"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@id/scene_img2"
            android:textSize="15sp"
            android:text="标题"/>

        <TextView
            android:id="@+id/scene_message2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scene_title2"
            android:layout_alignLeft="@id/scene_title2"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/font_unlow"
            android:text="内容"/>

        <TextView
            android:id="@+id/scene_fans2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scene_message2"
            android:layout_alignLeft="@id/scene_message2"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/font_unchecked"
            android:text="粉丝"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/font_unchecked"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.5"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/scene_img3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_launcher"
            android:layout_marginLeft="20dp"/>

        <TextView
            android:id="@+id/scene_title3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/scene_img3"
            android:layout_marginLeft="10dp"
            android:textSize="15sp"
            android:layout_alignTop="@id/scene_img3"
            android:text="标题"/>

        <TextView
            android:id="@+id/scene_message3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scene_title3"
            android:layout_alignLeft="@id/scene_title3"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/font_unlow"
            android:text="内容"/>

        <TextView
            android:id="@+id/scene_fans3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/scene_message3"
            android:layout_alignLeft="@id/scene_message3"
            android:maxLines="2"
            android:ellipsize="end"
            android:textColor="@color/font_unchecked"
            android:text="粉丝"/>

    </RelativeLayout>
    </LinearLayout>

</android.support.v7.widget.CardView>