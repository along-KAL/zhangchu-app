<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">



    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_margin="8dp">

        <EditText
            android:id="@+id/cooksearch_edit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:hint="请输入搜索的内容"/>

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="cancel"
            android:background="@color/colorAlpha"
            android:text="取消"/>

    </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="20dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="4"
            android:columnCount="5">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:textColor="@color/font_unchecked"
                android:layout_rowSpan="1"
                android:layout_columnSpan="5"
                android:text="热门搜索"/>

            <TextView
                android:id="@+id/cooksearch_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_color"
                android:layout_rowSpan="1"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="鱿鱼"/>

            <TextView
                android:id="@+id/cooksearch_info2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_color"
                android:layout_rowSpan="1"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="酸菜鱼"/>


            <TextView
                android:id="@+id/cooksearch_info3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_color"
                android:layout_rowSpan="1"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="面包"/>


            <TextView
                android:id="@+id/cooksearch_info4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_color_small"
                android:layout_rowSpan="1"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="面"/>


            <TextView
                android:id="@+id/cooksearch_info5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shap_color_small"
                android:layout_rowSpan="1"
                android:layout_margin="5dp"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:text="猪"/>


        </GridLayout>




    </android.support.v7.widget.CardView>

</LinearLayout>