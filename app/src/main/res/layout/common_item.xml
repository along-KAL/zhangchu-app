<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="true">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_columnSpan="1"
            android:layout_row="2"
            android:padding="10dp">

            <LinearLayout
                android:id="@+id/common_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">

                <TextView
                    android:id="@+id/common_subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="早餐日记"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/more"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/common_img1"
                android:layout_width="wrap_content"
                android:layout_height="150dp"
                android:src="@mipmap/ic_launcher"
                android:layout_below="@id/common_layout"
                android:scaleType="fitXY"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/common_title"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:textColor="@color/colorWright"
                android:layout_below="@id/common_img1"
                android:layout_marginTop="-50dp"
                android:layout_marginLeft="10dp"
                android:textStyle="bold"
                android:maxLines="1"
                android:ellipsize="end"
                android:text="早餐日记"/>

            <TextView
                android:id="@+id/common_title2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/common_title"
                android:layout_alignLeft="@id/common_title"
                android:textColor="@color/colorWright"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:text="79道菜"/>


            <GridView
                android:id="@+id/common_gridview"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_toRightOf="@id/common_img1"
                android:layout_alignTop="@id/common_img1"
                android:numColumns="2"
                android:columnWidth="40dp"
                android:stretchMode="columnWidth"/>

            <TextView
                android:id="@+id/common_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/common_gridview"
                android:textSize="15sp"
                android:text="心情诉说"
                android:layout_marginTop="-10dp"
                android:gravity="center"/>

        </RelativeLayout>

</android.support.v7.widget.CardView>