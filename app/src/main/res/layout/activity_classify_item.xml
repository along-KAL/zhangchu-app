<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_classify_item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.group.zhangchu.module.cookbook.activitys.ClassifyItemActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="140dp">

        <ImageView
            android:id="@+id/activity_classify_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/jianyijiachangcai"
            android:scaleType="fitXY"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/classify_item_Img_play"
            android:src="@mipmap/play"
            android:layout_gravity="center"/>

    </FrameLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/classify_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="30dp"></android.support.design.widget.TabLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/classify_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v4.view.ViewPager>
</LinearLayout>
