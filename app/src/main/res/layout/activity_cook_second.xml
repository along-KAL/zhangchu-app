<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cook_second"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.group.zhangchu.module.cookbook.activitys.CookSecondActivity">

   <LinearLayout
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:orientation="horizontal">

       <ImageView
           android:id="@+id/cook_static"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:src="@mipmap/cook_static"
           android:onClick="retreat"
           android:layout_margin="10dp"/>

       <TextView
           android:id="@+id/cook_showTitle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_gravity="center_vertical"
           android:text="显示当前页面"/>

   </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/cook_recycleView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>

</LinearLayout>
