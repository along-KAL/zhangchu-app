<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <ImageView
        android:id="@+id/news_show_img"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/news_show_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_show_img"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_margin="10dp"
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="名字"/>

    <TextView
        android:id="@+id/news_show_watches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/news_show_title"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:textColor="@color/font_unchecked"
        android:text="浏览量"/>

    <Button
        android:id="@+id/bt_more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/news_show_title"
        android:layout_margin="20dp"
        android:background="@drawable/news_shap"
        android:visibility="gone"
        android:text="加载更多"/>

</RelativeLayout>